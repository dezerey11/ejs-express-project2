<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <header>
      <div class="navbar">
        <a href="/auth/logout">Logout</a>
        /
        <a href="/userpage"> Back to <%= username %>'s Page</a>
      </div>
    </header>

    <main>
      <h1 class="title is-1">Edit Post</h1>

      <form
        id="form"
        action="/userpage/<%= post._id %>?_method=PUT"
        method="post"
      >
        Title:
        <input
          type="text"
          placeholder="title"
          name="title"
          value="<%= post.title %>"
        />
        <br />
        Image
        <input
          type="text"
          placeholder="url"
          name="image"
          value="<%= post.image %>"
        />
        <br />
        Description
        <input
          type="text"
          placeholder="description"
          name="body"
          value="<%= post.body %>"
        />
        <br />
        Topic
        <input
          type="text"
          placeholder="topic"
          name="topic"
          value="<%= post.topic %>"
        />
        <br />
        <input type="submit" placeholder="create post" />
      </form>
    </main>
  </body>

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/footer") %>
</html>
