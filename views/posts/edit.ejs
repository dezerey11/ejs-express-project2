<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <header>
      <div class="navbar">
        <a href="/userpage"> Back to <%= username %>'s Page</a>
        /
        <a href="/auth/logout">Logout</a>
      </div>
    </header>

    <main>
      <h1 class="title is-1">Edit Post</h1>

      <form
        id="form"
        action="/userpage/<%= post._id %>?_method=PUT"
        method="post"
      >
        Title:
        <input
          type="text"
          placeholder="title"
          name="title"
          value="<%= post.title %>"
        />
        <br />
        Image
        <input
          type="text"
          placeholder="url"
          name="image"
          value="<%= post.image %>"
        />
        <br />
        Description
        <input
          type="text"
          placeholder="description"
          name="body"
          value="<%= post.body %>"
        />
        <br />
        Topic
        <select type="text" placeholder="topic" name="topic">
          <% for (const topic of topics) { %>
          <option value="<%= topic %>"><%= topic %></option>
          <% } %>
        </select>
        <br />
        <input type="submit" placeholder="create post" />
      </form>

      <form
        action="/userpage/<%= post._id %>?_method=DELETE"
        class="delete-form"
        method="POST"
      >
        <button type="submit">Delete Post</button>
      </form>
    </main>
  </body>

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/footer") %>
</html>
