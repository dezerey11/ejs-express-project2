<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/topics">Inspiration App</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/userpage"> <%= username %>'s Page</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      <h1 class="title is-1 has-text-white">EDIT POST</h1>

      <form
        id="form"
        action="/userpage/<%= post._id %>?_method=PUT"
        method="post"
      >
        <p class="title is-2 has-text-white">Title :</p>
        <input
          type="text"
          placeholder="title"
          name="title"
          value="<%= post.title %>"
        />
        <br />
        <p class="title is-2 has-text-white">Image :</p>
        <input
          type="text"
          placeholder="url"
          name="image"
          value="<%= post.image %>"
        />
        <br />
        <p class="title is-2 has-text-white">Description :</p>
        <input
          type="text"
          placeholder="description"
          name="body"
          value="<%= post.body %>"
        />
        <br />
        <p class="title is-2 has-text-white">Topic :</p>
        <select type="text" name="topic">
          <% for (const topic of topics) { %> <% if (post.topic === topic) { %>
          <option value="<%= topic %>" selected><%= topic %></option>
          <% } else { %>
          <option value="<%= topic %>"><%= topic %></option>
          <% } %> <% } %>
        </select>
        <br />
        <input type="submit" placeholder="create post" class="submit-button" />
      </form>

      <form
        action="/userpage/<%= post._id %>?_method=DELETE"
        class="delete-form"
        method="POST"
      >
        <button type="submit" class="delete-button">Delete Post</button>
      </form>
    </main>
  </body>

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/footer") %>
</html>
