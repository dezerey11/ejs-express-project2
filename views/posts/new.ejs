<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <header>
      <div class="navbar">
        <a href="/auth/logout">Logout</a>
        /
        <a href="/userpage"> Back to <%= username %>'s Page</a>
      </div>
    </header>

    <main>
      <h1 class="title is-1">New Post Form</h1>

      <form id="form" action="/userpage" method="post">
        Title:
        <input type="text" placeholder="title" name="title" />
        <br />
        Image
        <input type="text" placeholder="url" name="image" />
        <br />
        Description
        <input type="text" placeholder="description" name="body" />
        <br />
        Topic
        <select type="text" placeholder="topic" name="topic">
          <% for (const topic of topics) { %>
          <option value="<%= topic %>"><%= topic %></option>
          <% } %>
        </select>

        <br />
        <input type="submit" placeholder="create post" />
      </form>
    </main>
  </body>

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/footer") %>
</html>
