<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/topics">Inspiration App</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/userpage"> <%= username %>'s Page</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      <h1 class="title is-1 has-text-white">NEW POST FORM</h1>

      <form id="form" action="/userpage" method="post">
        <p class="title is-2 has-text-white">Title :</p>
        <input type="text" placeholder="title" name="title" />
        <br />
        <p class="title is-2 has-text-white">Image :</p>
        <input type="text" placeholder="url" name="image" />
        <br />
        <p class="title is-2 has-text-white">Description :</p>

        <input type="text" placeholder="description" name="body" />
        <br />
        <p class="title is-2 has-text-white">Topic :</p>

        <select type="text" placeholder="topic" name="topic">
          <% for (const topic of topics) { %>
          <option value="<%= topic %>"><%= topic %></option>
          <% } %>
        </select>
        <br />
        <input type="submit" placeholder="create post" />
      </form>
    </main>
  </body>

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/footer") %>
</html>
