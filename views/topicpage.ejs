<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("partials/head") %>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/topics">Inspiration App</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/userpage"><%= username %>'s Page</a></li>
            <li><a href="/topics"> Topics Page</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      <h1 class="title is-1 has-text-white">Topic</h1>
      <br />
      <% for (const post of posts) { %>
      <div class="card" style="display: inline-block">
        <div class="card-content">
          <a href="/post/<%= post._id %>"
            ><img class="post-image" src="<%= post.image %>"
          /></a>
          <div class="content">
            <h2 class="subtitle is-5"><%= post.title %></h2>
          </div>
        </div>
      </div>
      <% } %>
    </main>
  </body>

  <!-- THE HEAD TAG PARTIAL -->
  <%- include("partials/footer") %>
</html>
